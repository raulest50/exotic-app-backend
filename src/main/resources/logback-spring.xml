<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- Appender para logs de carga masiva (archivo dedicado para diagnóstico) -->
    <property name="LOG_PATH" value="logs"/>
    <appender name="CARGA_MASIVA_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/carga_masiva.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/carga_masiva.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- Logger específico para CargaMasivaService y MovimientosService (carga masiva) -->
    <logger name="exotic.app.planta.service.commons.CargaMasivaService" level="DEBUG" additivity="true">
        <appender-ref ref="CARGA_MASIVA_FILE"/>
    </logger>
    <logger name="exotic.app.planta.service.inventarios.MovimientosService" level="DEBUG" additivity="true">
        <appender-ref ref="CARGA_MASIVA_FILE"/>
    </logger>
</configuration>
